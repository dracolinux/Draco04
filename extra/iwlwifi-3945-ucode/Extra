mkdir -p $DRACOSRC_PKG/lib/firmware $DRACOSRC_PKG/usr/doc/$DRACOSRC_PKG_NAME-$DRACOSRC_PKG_VERSION || exit 1
tar xfJ $DRACOSRC_CACHE/$DRACOSRC_PKG_NAME-$DRACOSRC_PKG_VERSION.tar.xz || exit 1
cd $DRACOSRC_PKG_NAME-$DRACOSRC_PKG_VERSION || exit 1
cat READ* > $DRACOSRC_PKG/usr/doc/$DRACOSRC_PKG_NAME-$DRACOSRC_PKG_VERSION/README || exit 1
cat LIC* > $DRACOSRC_PKG/usr/doc/$DRACOSRC_PKG_NAME-$DRACOSRC_PKG_VERSION/LICENSE || exit 1
cp iwlwifi-3945-2.ucode $DRACOSRC_PKG/lib/firmware/ || exit 1
